<?xml version="1.0" encoding="utf-8"?>
<!-- Data extraction rules for Android 12+ (cloud backup and device transfer) -->
<data-extraction-rules>
    <!-- Cloud backup configuration (Google Drive, etc.) -->
    <cloud-backup>
        <!-- Include user data -->
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        <include domain="sharedpref" path="."/>

        <!-- Exclude sensitive data - DataStore contains encrypted tokens -->
        <!-- DataStore files are in the 'file' domain, not 'sharedpref' -->
        <exclude domain="file" path="datastore"/>
        <exclude domain="file" path="cache"/>
    </cloud-backup>

    <!-- Device-to-device transfer (Quick Switch, etc.) -->
    <device-transfer>
        <!-- Include user data for device transfer -->
        <include domain="database" path="."/>
        <include domain="file" path="."/>
        <include domain="sharedpref" path="."/>

        <!-- Exclude sensitive and device-specific data -->
        <!-- DataStore files are in the 'file' domain, not 'sharedpref' -->
        <exclude domain="file" path="datastore"/>
        <exclude domain="sharedpref" path="device_prefs.xml"/>
        <exclude domain="file" path="cache"/>
    </device-transfer>
</data-extraction-rules>