<?xml version="1.0" encoding="utf-8"?>
<!-- Backup configuration for Android Auto Backup (API 23+) -->
<full-backup-content>
    <!-- Backup databases (user data) -->
    <include domain="database" path="."/>

    <!-- Backup internal files -->
    <include domain="file" path="."/>

    <!-- Backup shared preferences -->
    <include domain="sharedpref" path="."/>

    <!-- Exclude sensitive data -->
    <!-- DataStore contains encrypted tokens - exclude for security -->
    <!-- DataStore files are in the 'file' domain, not 'sharedpref' -->
    <exclude domain="file" path="datastore"/>

    <!-- Exclude device-specific preferences (if they exist) -->
    <exclude domain="sharedpref" path="device_prefs.xml"/>

    <!-- Exclude cache -->
    <exclude domain="file" path="cache"/>
</full-backup-content>